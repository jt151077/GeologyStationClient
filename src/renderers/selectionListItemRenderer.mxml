<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" >
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected" />
	</s:states>
	
	<s:VGroup verticalAlign="top" horizontalAlign="center" paddingBottom="20" paddingTop="-10" verticalCenter="0" width="100%" gap="0">
		<s:Image source="assets/pics/imac.png" width="100" alpha.hovered=".5"/>
		<s:Label text="{data.name}" width="100%" fontWeight="bold" textAlign="center" color="#FFFFFF" color.hovered="#000000" color.selected="0x000000"/>
	</s:VGroup>
</s:ItemRenderer>